<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenciaActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione 4 Favoritos:"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_margin="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Android"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:checked="false"
                android:id="@+id/cat_android"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_apple"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:checked="false"
                android:id="@+id/cat_blockchain"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cloud"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_cloud"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Criptomoedas"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_criptomoedas"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="E-business"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_business"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Games"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_games"
                android:checked="false"/>
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Inteligencia Artificial"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_ia"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_mobile"
                android:checked="false"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sistema Operacional"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:id="@+id/cat_so"
                android:checked="false"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enviar"
                android:textColor="@color/azulSecundarioDark"
                android:backgroundTint="@color/verdePrimario"
                android:onClick="home"
                android:id="@+id/btn_enviar"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>