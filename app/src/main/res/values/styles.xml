<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/logoTela</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <!-- Se quiser deixar a linha azul sempre, tirar comentÃ¡rio da linha de baixo-->
        <!--<item name="colorControlNormal">@color/azulSecundarioDark</item>-->
        <item name="colorControlActivated">@color/azulSecundarioDark</item>

    </style>

    <style name="logoTela" parent="@style/Widget.AppCompat.Light.ActionBar">
       <item name="background">@color/colorPrimary</item>
        <item name="android:logo">@drawable/techfyme_logo_action_bar</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:logo">@drawable/techfyme_logo_action_bar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat">
        <item name="alertDialogStyle">@color/azulSecundarioDark</item>
        <item name="android:alertDialogStyle">@color/azulSecundarioDark</item>
    </style>

</resources>
